<idea-plugin>
    <id>com.github.weisj.darkmode</id>
    <name>Auto Dark Mode Windows</name>
    <description>
        Automatically change IDEA theme according to Windows theme (dark/light) and high contrast settings.
    </description>

    <vendor url="https://github.com/weisJ/auto-dark-mode">
        Jannis Weis
    </vendor>

    <idea-version since-build="2019.3"/>
    <depends>com.intellij.modules.platform</depends>

    <applicationListeners>
        <listener class="com.github.weisj.darkmode.AutoDarkModeStartupListener"
                  topic="com.intellij.ide.AppLifecycleListener"/>
    </applicationListeners>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.weisj.darkmode.AutoDarkModeOptions"/>
        <applicationConfigurable instance="com.github.weisj.darkmode.DarkModeConfigurable"
                                 dynamic="true"
                                 os="windows"/>
    </extensions>
</idea-plugin>
