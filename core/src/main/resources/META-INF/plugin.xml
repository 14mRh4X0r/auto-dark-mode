<idea-plugin>
    <id>com.github.weisj.darkmode</id>
    <name>Auto Dark Mode Windows</name>
    <description>
        Automatically change IDEA theme according to windows theme and high contrast settings.
    </description>

    <vendor url="https://github.com/weisJ/auto-dark-mode">
        Jannis Weis
    </vendor>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <application-components>
        <component>
            <implementation-class>com.github.weisj.darkmode.AutoDarkMode</implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.weisj.darkmode.AutoDarkModeOptions" />
        <applicationConfigurable instance="com.github.weisj.darkmode.DarkModeConfigurable"
                                 os="windows"/>
    </extensions>
</idea-plugin>
